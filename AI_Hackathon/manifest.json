{
  "manifest_version": 3,
  "name": "ChatGpt Monitor",
  "version": "1.0",
  "description": "Monitors user interactions with ChatGPT and flags sensitive comments.",
  "permissions": ["activeTab","storage"],
  "action": {
    "default_popup": "popup.html"
    
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/"], 
      "js": ["content.js"]
    }
  ]
  
}
